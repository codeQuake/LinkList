<?xml version="1.0"?>
<package name="de.chrihis.wcf.linkList.quote.infraction" xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com/XSD/package.xsd">
	<packageinformation>
		<packagename>Link Sammlung: Zitatfunktion und Verwarnfunktion</packagename>
		<packagedescription>Dieses Plugin fügt die Zitatfunktion und das Verwarnungssystem in die Link Sammlung (Linkliste) ein, um Links und Kommentare zu ziteren und deren Autoren zu verwarnen..</packagedescription>
		<plugin>com.woltlab.wcf.message.multiQuote</plugin>
		<version>1.0.0</version>
		<date>2010-12-11</date>
	</packageinformation>
	
	<authorinformation>
		<author>Jens Krumsieck (ehemaliger Autor: Christoph H. (Chrihis))</author>
		<authorurl><![CDATA[http://codequake.de]]></authorurl>
	</authorinformation>
	
	<requiredpackages>
		<requiredpackage minversion="1.1.2">com.woltlab.wcf</requiredpackage>
		<requiredpackage minversion="1.1.0 Alpha 1">de.chrihis.wcf.linkList</requiredpackage>
		<requiredpackage>com.woltlab.wcf.user.infraction</requiredpackage>
	</requiredpackages>
	
	<instructions type="install">
		<!-- files -->
		<files>files.tar</files>
		<templates>templates.tar</templates>
		
		<!-- config -->
		<eventlistener>eventlistener.xml</eventlistener>
		<warningobjecttype>warningobjecttype.xml</warningobjecttype>
	</instructions>
	<instructions type="update" fromversion="1.0.0 Beta 1">
		<files>files.tar</files>
		<templates>templates.tar</templates>
	</instructions>
</package>